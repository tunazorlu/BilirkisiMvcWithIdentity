@model IEnumerable<IdentityRole>

<a class="btn btn-sm btn-primary" asp-controller="Rol" asp-action="Ekle">Yeni Kullanıcı Rolü Ekle</a>
<hr>
<table style="vertical-align:middle;" class="table table-sm table-bordered">
    <tr>
        <th width="25%">Id</th>
        <th>Rol Adı</th>
        <th>Kullanıcılar</th>
        <th>İşlem</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4">Rol Yok</td>
        </tr>
    }

    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td asp-role-users="@role.Id"></td>
            <td>
                <form method="post" style="display: inline-block;">
                    <a class="btn btn-sm btn-primary" asp-controller="Rol" asp-action="Duzenle" asp-route-id="@role.Id">Düzenle</a>
                    <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                </form>
            </td>
        </tr>
    }
</table>