@model IEnumerable<IdentityUser>
<h2>Kullanıcı Listesi</h2>
<br />
<a class="btn btn-sm btn-primary" asp-controller="Hesap" asp-action="Ekle">Yeni Kullanıcı Ekle</a>
<hr />
<table style="vertical-align:middle;" class="table table-sm table-bordered">
    <thead>
        <tr>
            <th style="vertical-align:center;" width="25%">Id</th>
            <th>Kullanıcı Adı</th>
            <th>E-posta</th>
            <th>Telefon</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a asp-controller="Kullanici" asp-action="Duzenle" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <form action="Sil" method="post" onsubmit="return confirm('Emin misiniz?')" style="display: inline-block;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
            </tr>
        }
    </tbody>
</table>