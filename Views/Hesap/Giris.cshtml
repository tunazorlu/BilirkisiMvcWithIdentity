@{ 
    Layout = null; 
    ViewData["Title"] = "Bilirkişi Raporu";

    if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-warning" role="alert">
            @TempData["Mesaj"]
        </div>
    }
}

@model GirisModeli

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>&copy; @ViewData["Title"] - @DateTime.UtcNow.Year</title>
    <link rel="stylesheet" href="~/css/w3.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BilirkisiMvc.styles.css" asp-append-version="true" />
</head>

<h2 style="margin: 0 auto; width: 20%;">Giriş Yap</h2>
<hr style="margin: 0 auto; width: 20%;"/>
<form asp-action="Giris" method="post" class="center-form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Eposta" class="control-label">E-posta</label>
        <input asp-for="Eposta" class="form-control" />
        <span asp-validation-for="Eposta" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Parola" class="control-label">Parola</label>
        <input asp-for="Parola" class="form-control" />
        <span asp-validation-for="Parola" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">

        <input asp-for="BeniHatirla" class="form-check-input" />
        <label asp-for="BeniHatirla" class="form-check-label">Beni Hatırla</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
        <a asp-action="ParolamiUnuttum" asp-controller="Hesap" class="btn btn-warning">Şifremi Unuttum</a>
    </div>
</form>

<style>
    .center-form {
    margin: 0 auto;
    width: 20%;
}
</style>